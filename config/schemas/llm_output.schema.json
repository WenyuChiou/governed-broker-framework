{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LLM Output Schema",
  "description": "Schema for validating LLM structured output",
  "type": "object",
  "required": ["decision", "threat_appraisal", "coping_appraisal"],
  "properties": {
    "decision": {
      "type": "string",
      "description": "Action code selected by LLM"
    },
    "threat_appraisal": {
      "type": "string",
      "description": "LLM's threat assessment",
      "minLength": 10
    },
    "coping_appraisal": {
      "type": "string", 
      "description": "LLM's coping assessment",
      "minLength": 10
    },
    "reasoning": {
      "type": "string",
      "description": "Optional additional reasoning"
    }
  },
  "additionalProperties": false
}
